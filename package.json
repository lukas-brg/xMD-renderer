{
    "name": "xmd",
    "private": true,
    "workspaces": [
        "xmd-core",
        "xmd-code",
        "xmd-cli"
    ],
    "bin": {
        "xmd": "./xmd-cli/dist/cli.js"
    },
    "scripts": {
        "build-cli": "npm run build --workspace=xmd-cli",
        "build-code": "npm run build --workspace=xmd-code",
        "start-cli": "npm run build --workspace=xmd-cli && npx tsx xmd-cli/dist/cli.js",
        "cli": "npm run build-cli && xmd",
        "build": "npm run build-cli && npm run build-code",
        "test": "npm test --workspaces"
    }
}
